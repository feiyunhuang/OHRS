      </children>
   </HBox>
   <Text fx:id="result" GridPane.columnSpan="2" GridPane.halignment="RIGHT" GridPane.rowIndex="6" />
      <ComboBox fx:id="stageType" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
   </children>
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
