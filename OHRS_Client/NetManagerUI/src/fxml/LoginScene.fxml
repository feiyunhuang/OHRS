<padding><Insets bottom="10" left="25" right="25" top="25" /></padding>
   <children>
   <Text id="welcome-text" text="Welcome" GridPane.columnSpan="2" GridPane.rowIndex="0" />
   <Label text="密码：" GridPane.rowIndex="1" />
   <PasswordField id="passwordField" fx:id="password" GridPane.columnIndex="1" GridPane.rowIndex="1" />
   <HBox alignment="CENTER_LEFT" spacing="50.0" GridPane.columnIndex="1" GridPane.rowIndex="4">
      <children>
      	<Button alignment="TOP_LEFT" onAction="#handleLoginButton" text="登录" />
